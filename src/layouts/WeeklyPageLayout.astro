---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="kr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Grandiflora+One&family=Ojuju:wght@200..800&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <main>
            <slot />
        </main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "Grandiflora One", system-ui, sans-serif;
		font-optical-sizing: auto;
		background: #13151a;
		font-weight: 400;
		font-style: normal;
		background-size: 224px;
        color: white;
	}

    main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	a {
		color:white;
		text-decoration: none;
	}

	a:hover {
		color: #F6EE84;
	}

	p {
		color: #C6E055;
		font-size: 1rem;
	}

	li {
		list-style-type: lower-roman;
	}

</style>
